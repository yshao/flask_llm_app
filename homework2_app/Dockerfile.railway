# ============================================================================
# RAILWAY DOCKERFILE FOR FLASK LLM APP
# ============================================================================
# Optimized for Railway cloud deployment
# Railway: https://railway.app
# ============================================================================

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Install system dependencies
# - gcc: for building Python packages with C extensions
# - curl: for health checks
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create non-root user for security
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port (Railway injects PORT env var)
# Default to 8080 for local testing
EXPOSE 8080

# Health check (Railway also uses railway.toml health check)
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8080}/health || exit 1

# Bind to 0.0.0.0 and PORT environment variable
# Railway automatically sets PORT, default to 8080 for local
CMD sh -c "gunicorn \
    --worker-class gevent.pygevent.GeventWorker \
    --workers 1 \
    --worker-connections 1000 \
    --bind 0.0.0.0:${PORT:-8080} \
    --timeout 120 \
    --access-logfile - \
    --error-logfile - \
    --worker-tmp-dir /dev/shm \
    app:app"
